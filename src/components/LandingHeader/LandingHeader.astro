---
import Logo from "../Logo.astro";
import { LandingHeaderEnum, UrlsEnum } from "../../enums/enum";
---

<header
  id="landing-header"
  class="py-4 px-10 flex items-center fixed top-0 w-full justify-between z-40 text-white"
>
  <div class="flex flex-grow basis-0">
    <!-- <Logo /> -->
  </div>

  <nav class="flex flex-grow basis-0">
    <ul
      class="flex flex-sm [&>li>a]:font-medium [&>li>a]:text-current [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
    >
      <li class="hover:bg-black hover:text-white rounded">
        <a href="#home">{LandingHeaderEnum.HOME}</a>
      </li>
      <li class="hover:bg-black hover:text-white rounded">
        <a href="#section1">{LandingHeaderEnum.SECTION_1}</a>
      </li>
      <li class="hover:bg-black hover:text-white rounded">
        <a href="#section2">{LandingHeaderEnum.SECTION_2}</a>
      </li>
      <li class="hover:bg-black hover:text-white rounded">
        <a href="#section3">{LandingHeaderEnum.SECTION_3}</a>
      </li>
      <li class="hover:bg-black hover:text-white rounded">
        <a href="#contract">{LandingHeaderEnum.CONTRACT}</a>
      </li>
    </ul>
  </nav>

  <nav>
    <ul
      class="flex flex-sm [&>li>a]:font-medium [&>li>a]:text-current [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
    >
      <li class="hover:bg-black hover:text-white rounded">
        <a href={UrlsEnum.TWITTER} target="_blank" rel="noopener noreferrer"
          >{LandingHeaderEnum.TWITTER}</a
        >
      </li>
      <li class="hover:bg-black hover:text-white rounded">
        <a href={UrlsEnum.TELEGRAM} target="_blank" rel="noopener noreferrer"
          >{LandingHeaderEnum.TELEGRAM}</a
        >
      </li>
      <li class="hover:bg-black hover:text-white rounded">
        <a href={UrlsEnum.INSTAGRAM} target="_blank" rel="noopener noreferrer"
          >{LandingHeaderEnum.INSTAGRAM}</a
        >
      </li>
    </ul>
  </nav>
</header>

<script>
  // cambiar contraste de nav
  const headerEl = document.querySelector("#landing-header") as HTMLElement;
  const observerOptions = {
    root: null,
    rootMargin: "0px",
    threshold: 0.9,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      const { isIntersecting } = entry;
      if (isIntersecting) {
        const color = entry.target.getAttribute("data-header-color");
        headerEl.style.color = color;
      }
    });
  }, observerOptions);

  const sectionElements = document.querySelectorAll(".landing-section");
  sectionElements.forEach((section) => observer.observe(section));
</script>
